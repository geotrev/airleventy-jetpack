{
	"name": "airleventy-jetpack",
	"version": "1.0.0",
	"description": "airleventy template with plugins & bootstrap",
	"private": false,
	"main": "index.js",
	"scripts": {
		"format": "prettier --write '**/*.js' '**/*.scss' '**/*.html'",
		"watch": "npm-run-all --parallel watch:*",
		"build": "npm-run-all build-dev:scripts build:*",
		"build-prod": "npm-run-all build-prod:scripts build:*",
		"build:sass": "sass --style=compressed assets/sass/styles.scss:assets/dist/css/styles.css",
		"watch:sass": "sass --watch assets/sass/styles.scss:assets/dist/css/styles.css",
		"build:css-prefix": "postcss -r _site/assets/dist/css/*.css --verbose",
		"build-dev:scripts": "rollup -c",
		"build-prod:scripts": "BABEL_ENV=production rollup -c",
		"watch:scripts": "npm run build-dev:scripts -- -w",
		"build:11ty": "eleventy",
		"watch:11ty": "eleventy --serve"
	},
	"author": "geotrev",
	"license": "Unlicense",
	"dependencies": {
		"@11ty/eleventy": "^0.12.1",
		"@babel/core": "^7.13.14",
		"@babel/preset-env": "^7.13.12",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"autoprefixer": "^9.8.6",
		"glob": "^7.1.6",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^8.3.1",
		"rollup": "^2.44.0",
		"rollup-plugin-terser": "^7.0.2",
		"sass": "^1.32.8"
	},
	"devDependencies": {
		"babel-eslint": "^10.1.0",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"prettier": "^2.2.1",
		"stylelint": "^13.12.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-scss": "^3.19.0"
	}
}
